      <h2>日记内容</h2>
    </view>
    <view class="dairy-content">
      <editor id="editor" class="ql-container" placeholder="{{placeholder}}" bindstatuschange="onStatusChange" bindready="onEditorReady">
      </editor>
    </view>
  </view>
  <!-- 图片上传 -->
  <view style="margin: 5px 5px 5px 10px;">
      <h2>图片上传</h2>
    </view>
  <view class="upload-image">
    <image class="picture" src="../../images/icon/加号2.png"></image>
  </view>
  <view class="dairy-button">
    <button class="dairy-cancel">×</button>
    <button class="dairy-enter">√</button>
  </view>
</view>