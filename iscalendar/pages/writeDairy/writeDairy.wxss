.dairy-content{
  margin: 5px 5px 5px 5px;
  display: flex;
  height: 300px;
  flex-direction: row;
  background-color: #ffff;
  box-shadow:0px 3px 5px 1px #cecdcc99;
  border: 3px 3px 3px 3px rgba(85, 84, 84, 0.667);
}
.rich-content{
  margin: 5px 5px 5px 5px;
  display: flex;
  height: 300px;
  width: 300px;
  background-color: #ffff;
  box-shadow:0px 3px 5px 1px #cecdcc99;
}

.ql-container {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  font-size: 16px;
  line-height: 1.5;
  overflow: auto;
  padding: 10px 10px 20px 10px;
  border: 1px solid #ECECEC;
}

.ql-active {
  color: #22C704;
}

.iconfont {
  display: inline-block;
  width: 30px;
  height: 30px;
  cursor: pointer;
  font-size: 20px;
}

.toolbar {
  box-sizing: border-box;
  padding: 0 10px;
  height: 50px;
  width: 100%;
  position: fixed;
  left: 0;
  right: 100%;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border: 1px solid #ECECEC;
  border-left: none;
  border-right: none;
}

.upload-image{
  margin: 5px 5px 5px 5px;
  display: flex;
  justify-content: center;
  align-items:center;  
  width: 100px;
  height: 150px;
  background-color: #ffff;
  
}

.upload-image image{
  width: 20px;
  height: 20px;
}

.dairy-button{
  margin: 5px 5px 5px 5px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items:center;  
  float: right;
  border-radius: 3px 3px 3px 3px;
}



.dairy-cancel{
  border: none;
  border-color: transparent;
  border-radius: 0 0 0 0;
  color: darkgray;
  width: 48%;
  background-color: #ffff;
}

.dairy-enter{
  border: none;
  border-color: transparent;
  border-radius: 0 0 0 0;
  width: 48%;
  color: rgb(238, 135, 135);
  background-color: #ffff;
  
}

.btn-hover{
  position: relative;
  top: 3rpx;
  box-shadow:0px 0px 8px #999 inset; 
}

.plain-hover{
  position: relative;
  top: 3rpx;
  box-shadow:0px 0px 10px #bbbec4 inset; 
}