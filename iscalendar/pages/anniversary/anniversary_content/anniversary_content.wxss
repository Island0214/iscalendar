/* pages/anniversary/anniversary_content/anniversary_content.wxss */

.ann_item {
  overflow: hidden;
  border-radius: 3px;
}

.itemInner {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
}

.item_left {
  width: 160px;
  height: 160px;
  background-color: #5626e5;
  display: flex;
  flex-direction: column;
}

.item_right {
  height: 160px;
  padding-left: 10px;
  background-color: #fff;
  display: flex;
  flex-direction: column;
}

.kind-list__item_ann {
  margin: 0px 10px 10px 10 px;
  background-color: #fff;
  border-radius: 2px;
  overflow: hidden;
}

.item_rightText_gray {
  font-size: 27rpx;
  color: gray;
  margin-left: 10px;
  margin-top: 5px;
  line-height: 32rpx;
}

.item_rightText_gray2 {
  font-size: 27rpx;
  color: gray;
  margin-left: 10px;
  margin-top: 15px;
}

.item_rightText {
  font-size: 35rpx;
  margin-left: 10px;
  margin-top: 2px;
}

.item_leftTextName {
  font-size: 28rpx;
  margin-left: 7px;
  margin-top: 7px;
  color: rgb(223, 222, 222);
  font-weight: 600;
}

.item_leftTextWeek {
  font-size: 64rpx;
  margin-left: 7px;
  margin-top: 18px;
  color: white;
  line-height: 80rpx;
}

.item_leftTextMonthDay {
  font-size: 76rpx;
  margin-left: 7px;
  margin-top: 1px;
  color: white;
  line-height: 80rpx;
}

.textTag {
  font-size: 36rpx;
  margin-left: 7px;
  margin-top: 15px;
  font-weight: 400;
}

.NextAnnTime {
  font-size: 40rpx;
  margin-left: 7px;
  margin-top: 4px;
  color: #5626e5;
}

.textArea {
  background-color: rgb(230, 228, 228);
  width: 310px;
  margin-left: 5px;
  margin-right: 5px;
  margin-top: 3px;
}

.operation-icon {
  width: 40px;
  height: 40px;
  margin-left: 8px;
  margin-top: 8px;
  background-color: #5626e5;
  border-radius: 50%;
  position: relative;
}

.operation-icon image {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 32px;
  height: 32px;
}

.page__bd {
  padding-bottom: 10px;
}

.page-text {
  padding-top: 3px;
  font-size: 12px;
  padding-bottom: 3px;
}
