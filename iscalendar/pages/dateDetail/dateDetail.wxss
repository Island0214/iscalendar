/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  
  margin-top: 200px;
}

.date-block{
  margin: 5px 5px 5px 5px;
  display: flex;
  flex-direction: row;
  box-shadow:0px 3px 5px 1px #cecdcc99;
}

.today-Date {
  position: relative;
  width:35%;
  border-radius: 3px 3px 3px 3px;
  background-color: #5626e5;
  padding: 5px 15px;
  text-align: left;
  color: #fff;
  overflow: hidden;
}

.today-anniversary {
  position: relative;
  width: 65%;
  border-radius: 0 3px 3px 0;
  background-color: #fff;
  padding: 5px 15px;
  text-align: left;
  color: rgb(41, 40, 40);
  overflow: hidden;
}

.text-diary{
  margin: 5px 5px 5px 5px;
  display: flex;
  flex-direction: row;
  background-color: #ffff;
  box-shadow:0px 3px 5px 1px #cecdcc99; 
  
  box-sizing: border-box;
  width: 98%;
  height: 98%;
  font-size: 16px;
  line-height: 1.5;
  overflow: auto;
  padding: 10px 10px 20px 10px;
  border: 1px solid #ECECEC;
  
}